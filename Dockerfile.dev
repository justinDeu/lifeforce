FROM rust:1.76-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && \
    apt-get install -y build-essential pkg-config libpq-dev libssl-dev curl nodejs npm && \
    rm -rf /var/lib/apt/lists/* && \
    cargo install cargo-watch

# The dev.sh script will be our entrypoint
COPY dev.sh /app/

# Make it executable
RUN chmod +x /app/dev.sh

# Expose the ports
EXPOSE 3000 3001

# Run the development server with live reloading
CMD ["/app/dev.sh"]